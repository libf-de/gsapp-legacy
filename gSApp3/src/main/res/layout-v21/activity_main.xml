<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:id="@+id/withers"
    tools:context=".MainActivity" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:contentDescription="Herrmann Pistor Gymnasium-Logo"
        android:layout_marginTop="?pageMargin"
        android:src="@drawable/pistor" />

    <Button
        android:id="@+id/VertretungsplanButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/imageView1"
        android:onClick="zeigeVP"
        android:text="@string/VPlan" />

    <Button
        android:id="@+id/TerminButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/VertretungsplanButton"
        android:onClick="zeigeTM"
        android:text="@string/Termin" />

    <Button
        android:id="@+id/AktuellesButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/TerminButton"
        android:onClick="zeigeAK"
        android:text="@string/Aktuell" />

    <Button
        android:id="@+id/EssensplanButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/AktuellesButton"
        android:onClick="zeigeEP"
        android:text="Speiseplan" />

    <Button
        android:id="@+id/EssensbestellungButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/EssensplanButton"
        android:onClick="zeigeEB"
        android:text="Essenbestellung" />

    <Button
        android:id="@+id/KontaktButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/EssensbestellungButton"
        android:onClick="zeigeKT"
        android:text="Kontakt" />

    <TextView
        android:id="@+id/InfoAdapter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/KontaktButton"
        android:layout_alignRight="@+id/KontaktButton"
        android:layout_below="@+id/KontaktButton"
        android:gravity="center"
        android:scrollHorizontally="false"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>