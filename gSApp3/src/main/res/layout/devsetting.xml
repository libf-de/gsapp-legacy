<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="?pageMarginBottom"
    android:id="@+id/withers"
    tools:context=".DeveloperSettings" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Entwickereinstellungen"
        android:id="@+id/textView"
        android:layout_marginTop="?pageMargin"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SAVE"
        android:id="@+id/save"
        android:layout_alignParentTop="true"
        android:layout_marginTop="?pageMargin"
        android:layout_alignParentLeft="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HELP"
        android:id="@+id/help"
        android:layout_alignParentTop="true"
        android:layout_marginTop="?pageMargin"
        android:layout_alignParentRight="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="CheckIntervalTime (integer)"
        android:id="@+id/textView2"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/checktime"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:hint="1800" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="UIRotateModeGlobal (integer)"
        android:id="@+id/textView6"
        android:layout_below="@+id/checktime"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/rotate"
        android:layout_below="@+id/textView6"
        android:layout_centerHorizontal="true"
        android:hint="1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="GALogWriteLog (boolean)"
        android:id="@+id/textView7"
        android:layout_below="@+id/thememode"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New ToggleButton"
        android:id="@+id/writelog"
        android:layout_below="@+id/textView7"
        android:layout_centerHorizontal="true"
        android:textOff="*FALSE*"
        android:textOn="TRUE" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="UIShowDeveloper (boolean)"
        android:id="@+id/textView8"
        android:layout_below="@+id/rotate"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UIShowDeveloper"
        android:id="@+id/developer"
        android:layout_below="@+id/textView8"
        android:layout_centerHorizontal="true"
        android:textOff="*FALSE*"
        android:textOn="TRUE" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="UIThemeMode (string)"
        android:id="@+id/textView9"
        android:layout_below="@+id/developer"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/thememode"
        android:layout_below="@+id/textView9"
        android:layout_centerHorizontal="true"
        android:width="200dp"
        android:hint="android" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="VPlanSourceDebug (integer)"
        android:id="@+id/textView10"
        android:layout_below="@+id/writelog"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:hint="0"
        android:id="@+id/debugsrc"
        android:layout_below="@+id/textView10"
        android:layout_centerHorizontal="true"
        android:width="200dp" />

    </RelativeLayout>

</ScrollView>